{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
  },
  "include": [
    "src/*",
    "src/**/*",
    "typings/*",
    "__tests__/*",
    "__tests__/**/*"
  ]
}